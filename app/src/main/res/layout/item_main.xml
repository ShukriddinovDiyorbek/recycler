<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_main"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:id="@+id/main_header"
        android:layout_width="match_parent"
        android:paddingVertical="15dp"
        android:background="#4CF530"
        android:gravity="center_vertical"
        android:paddingHorizontal="20dp"
        android:orientation="horizontal"
        android:layout_height="90dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/lesson_number"
                    android:text="1"
                    android:textSize="24sp"
                    android:fontFamily="@font/nunito"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text=" Mashg'ulot"
                    android:textSize="24sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/nunito"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <TextView
                android:id="@+id/lesson_description"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:text="Describing abstract objects"
                android:layout_width="wrap_content"
                android:fontFamily="@font/nunito"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lesson_theme"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:gravity="center"
            android:background="@drawable/item_bordered"
            android:orientation="horizontal">
            <FrameLayout
                android:layout_width="24dp"
                android:layout_height="24dp">
                <ImageView
                android:id="@+id/topic_color_green"
                android:src="@drawable/topic_green"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/topic_color_orange"
                    android:src="@drawable/topic_orange"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/topic_color_red"
                    android:src="@drawable/topic_red"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>